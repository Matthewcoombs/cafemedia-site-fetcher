{
  "name": "Get AdThrive/CAM sites",
  "version": "1.6",
  "description": "Quickly pull AdThrive or CAM site details",
  "permissions": ["declarativeContent", "webRequest", "declarativeNetRequest", "storage"],
  "host_permissions": ["*://*.adthrive.com/*", "*://*.cafemedia.com/*", "*://localhost/*"],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "adThrive16.png",
    "48": "adThrive48.png",
    "128": "adThrive128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": ["*://*.publisher.adthrive.com/*", "*://*.admin.adthrive.com/*"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
